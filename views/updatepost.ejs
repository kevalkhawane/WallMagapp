<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add New Post</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>

</head>
<body>
  <%- include('includes/header.ejs') %>
  <div class="container">
    <h3>Update Post</h3>
    <div class="container">
      <div class="row justify-content-center">
      <div class="col-md-6">
          <form action="/admin/edit/" method="POST">
              <div class="form-group">
                <input type="text" name="_id" hidden value="<%= post._id %>" required>
                  <label for="playerId">Post Title :</label>
                <input type="text" class="form-control" name="title" value="<%= post.title %>" required>                  
              </div>
              <div class="form-group">
                <label for="playerId">Thumbnail Url :</label>
              <input type="text" class="form-control" name="thumbnail" value="<%= post.thumbnail %>" required>                  
            </div>
            <div class="form-group">
              <label for="playerId">Topic :</label>
            <input type="text" class="form-control" name="topic" value="<%= post.topic %>" >                  
            </div>
            <div class="form-group">
              <label for="playerId">Part :</label>
            <input type="number" class="form-control" name="part" value="<%= post.part %>">                  
            </div>
              <div class="form-group">
                  <label for="mdfile">Post Content : </label>                  
                <textarea class="form-control" name="post_content" rows="30"><%= post.content %></textarea>             
              </div>
              
              <div class="form-group">
                <label for="playerId">Tags :</label>
              <input type="text" class="form-control" name="tags" value="<%= post.tags %>" required>                  
            </div>
              
              <button type="submit" class="btn btn-primary mt-4">Update Post</button>
              <a class="btn btn-outline-primery  mt-4" href="/admin/allposts">Cancel</a>
            </form>
      </div>
      </div>
  </div>
  </div>

</body>
</html>
