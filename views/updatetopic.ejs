<!DOCTYPE html>
<html lang="en">
<head>
  <title>Update Topic</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('includes/header.ejs') %>
  <div class="container">
    <h3>Update Topic</h3>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <form action="/admin/updatetopic" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="_id" value="<%= topic._id %>" hidden>
            </div>
            <div class="form-group">
              <label for="name">Topic Name :</label>
              <input type="text" class="form-control" name="name" value="<%= topic.name %>" required>
            </div>
            <div class="form-group">
              <label for="thumbnail">Thumbnail Url :</label>
              <input type="text" class="form-control" name="thumbnail" value="<%= topic.thumbnail %>" required>
            </div>
            <div class="form-group">
              <label for="description">Description : </label>
              <textarea class="form-control" name="description" rows="5" maxlength="250" required><%= topic.description %></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-4">Update Topic</button>
            <a class="btn btn-outline-primary mt-4" href="/admin/topics">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
